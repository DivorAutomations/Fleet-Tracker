<%- include('partials/header.ejs') -%>

<h2>Hello, <%= user %></h2>

<div class="container">
    <h3>Register New Device</h3>
    <form action="/device/new" method="POST" class="row form-control">
        <div class="form-group">
            <label for="device">Device ID:</label>
            <input type="text" name="device" id="device" class="form-control" placeholder="Enter device ID" >
        </div>
        <div class="form-group">
            <label for="deviceName">Device Name:</label>
            <input type="text" name="deviceName" id="deviceName" class="form-control" placeholder="Enter device Name">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </form>
</div>

<div class="container">
    <div class="row">
        <ul>
            <% for(var i = 0; i < devices.length; i++) { %>
                <li><a href="/device/<%= devices[i].deviceID %>"><%=devices[i].deviceName %></a></li>
            <% } %>
        </ul>
    </div>
</div>



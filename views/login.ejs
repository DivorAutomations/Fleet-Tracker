<%- include('partials/header.ejs') -%>

<div class="container">
    <h2 class="center">Login</h2>
    <div class="row">
        <div class="col-6"></div>
        <div class="col-6 form-background">
        <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
            <% }) %> <% } %> <% if (locals.messages.info) { %> <%
                messages.info.forEach( el => { %>
                <div class="alert alert-info"><%= el.msg %></div>
                <% }) %> <% } %>
                <form action="/login" method="post">
                    <div class="form-group group-padding">
                        <label for="email">Email:</label>
                        <input type="email" name="email" id="email" class="form-control" placeholder="Enter email">
                    </div>
                    <div class="form-group group-padding">
                        <label for="password">Password:</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Enter password">
                    </div>
                    <button type="submit" class="form-group btn btn-primary group-padding">Login</button>
                    <div class="group-padding">
                        <p>Don't have an account yet? <a href="/register">Sign up now.</a></p>
                    </div>
                </form>
            </div>
        </div>
</div>

<%- include('partials/footer.ejs') -%>